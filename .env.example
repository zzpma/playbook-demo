# .env.example

# --- Django Core Settings ---
# REQUIRED: Must be unique and kept secret for production. 
# Generate a new one using Python: from django.core.management.utils import get_random_secret_key
SECRET_KEY="A_NEWLY_GENERATED_SECRET_KEY"

# Set to True for development, False for production
DEBUG=True

# Allowed hosts for Django. Use a comma-separated list.
ALLOWED_HOSTS="localhost,127.0.0.1"


# --- Google OAuth Settings ---
# Retrieve these from your Google Cloud Console for the OAuth 2.0 Client ID
GOOGLE_CLIENT_ID="YOUR_GOOGLE_CLIENT_ID"
GOOGLE_CLIENT_SECRET="YOUR_GOOGLE_CLIENT_SECRET"


# --- Database Settings (Example for Postgres) ---
# Replace with your local or deployment database credentials
DB_NAME="django_project_db"
DB_USER="db_username"
DB_PASSWORD="db_password"
DB_HOST="localhost"
DB_PORT="5432"